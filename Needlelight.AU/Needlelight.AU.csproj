<Project Sdk="Microsoft.NET.Sdk">

    <!-- Embed the updated app only if present; CI copies Needlelight.exe here before publish -->
    <ItemGroup Condition="Exists('Needlelight.exe')">
        <EmbeddedResource Include="Needlelight.exe" />
    </ItemGroup>
    <PropertyGroup>
        <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
        <RootNamespace>Needlelight.AU</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <PublishAot>true</PublishAot>
        <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
        <DebugType>embedded</DebugType>
        <ApplicationManifest>app.manifest</ApplicationManifest>
    </PropertyGroup>
</Project>

