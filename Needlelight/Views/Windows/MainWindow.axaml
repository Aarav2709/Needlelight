<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Needlelight.ViewModels"
    xmlns:util="using:Needlelight.Util"
    Width="1200"
    Height="800"
    MinWidth="900"
    MinHeight="650"
        x:Class="Needlelight.Views.Windows.MainWindow"
        Icon="/Assets/Needlelight.ico"
        Title="Needlelight"
        WindowState="Maximized"
        x:DataType="vm:MainWindowViewModel"
        CanResize="True"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="46"
        TransparencyLevelHint="AcrylicBlur,Blur,Transparent"
        TransparencyBackgroundFallback="{DynamicResource Brush.Background}"
        Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <StreamGeometry x:Key="Icon.Minimize">M3,9 L13,9</StreamGeometry>
            <StreamGeometry x:Key="Icon.Maximize">M3,3 L13,3 L13,13 L3,13 Z</StreamGeometry>
            <StreamGeometry x:Key="Icon.Restore">M5,5 L13,5 L13,13 L5,13 Z M3,3 L11,3 L11,11 L3,11 Z</StreamGeometry>
            <util:GameNameShortenerConverter x:Key="GameNameShortener"/>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.window-control">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip.Placement" Value="Top"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.12"/>
                    <BrushTransition Property="Foreground" Duration="0:0:0.12"/>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.window-control:not(.close):pointerover">
            <Setter Property="Background" Value="{DynamicResource Brush.SurfaceElevated}"/>
        </Style>
        <Style Selector="Button.window-control:pressed">
            <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextInverted}"/>
        </Style>
        <Style Selector="Button.window-control.close:pointerover">
            <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextInverted}"/>
        </Style>
        <Style Selector="Button.window-control.close:pressed">
            <Setter Property="Background" Value="{DynamicResource Brush.AccentHover}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextInverted}"/>
        </Style>
    </Window.Styles>

    <!-- Main Layout: Flat Top Bar | Content | Smaller Bottom Nav -->
    <Grid RowDefinitions="Auto,*,Auto"
          Background="{DynamicResource Brush.Background}">

        <!-- Top Bar - Flat and Square -->
    <Border x:Name="TitleBar"
                Grid.Row="0"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,0,1"
        Padding="20,10"
        PointerPressed="TopBar_OnPointerPressed"
        DoubleTapped="TopBar_OnDoubleTapped">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Left: Branding and Version -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="12"
                            VerticalAlignment="Center">
                    <TextBlock Text="Needlelight"
                               FontFamily="{DynamicResource GameFont}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Brush.TextPrimary}"/>
                    <TextBlock Text="{CompiledBinding AppVersion}"
                               VerticalAlignment="Center"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="14"
                               Foreground="{DynamicResource Brush.TextSecondary}"/>
                </StackPanel>

                <!-- Center: Game selector on top bar -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="12,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Game:"
                               VerticalAlignment="Center"
                               FontFamily="{DynamicResource UIFont}"
                               Foreground="{DynamicResource Brush.TextSecondary}"/>
                    <ComboBox MinWidth="150"
                              MaxWidth="210"
                              Width="145"
                              ItemsSource="{CompiledBinding TopBarAvailableGames}"
                              SelectedItem="{CompiledBinding TopBarSelectedGame, Mode=TwoWay}"
                              FontFamily="{DynamicResource UIFont}"
                              HorizontalContentAlignment="Stretch">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Text="{Binding Converter={StaticResource GameNameShortener}}"
                                           FontFamily="{DynamicResource UIFont}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Right: Custom window controls -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="6"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center">
                    <Button Classes="window-control minimize"
                            Click="MinimizeButton_OnClick"
                            ToolTip.Tip="Minimize">
                        <Viewbox Width="14" Height="14">
                            <Path Data="{StaticResource Icon.Minimize}"
                                  StrokeThickness="1.6"
                                  StrokeLineCap="Round"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Viewbox>
                    </Button>
                    <Button x:Name="MaximizeButton"
                            Classes="window-control maximize"
                            Click="MaximizeRestoreButton_OnClick"
                            ToolTip.Tip="Maximize">
                        <Viewbox Width="14" Height="14">
                            <Path x:Name="MaximizeIconPath"
                                  Data="{StaticResource Icon.Maximize}"
                                  StrokeThickness="1.4"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                  Fill="Transparent"/>
                        </Viewbox>
                    </Button>
                    <Button Classes="window-control close"
                            Click="CloseButton_OnClick"
                            ToolTip.Tip="Close">
                        <Viewbox Width="14" Height="14">
                            <Path Data="M3,3 L13,13 M13,3 L3,13"
                                  StrokeThickness="1.6"
                                  StrokeLineCap="Round"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Viewbox>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Game accent bar (HK vs Silksong) -->
        <Border Grid.Row="0"
            Height="3"
            VerticalAlignment="Bottom"
            Background="{DynamicResource Brush.Accent}" />

        <!-- Content Area with Transitions -->
        <TransitioningContentControl Grid.Row="1"
                                     Content="{Binding Content}"
                                     Background="{DynamicResource Brush.Background}"/>

        <!-- Bottom Navigation - Icon + Text, centered -->
        <ListBox Grid.Row="2"
                 Classes="bottom-nav"
                 SelectedIndex="{Binding BottomNavIndex, Mode=TwoWay}">
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PathIcon Data="{StaticResource apps_regular}" Width="18" Height="18"/>
                    <TextBlock Text="Game Launcher"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PathIcon Data="{StaticResource book_database_regular}" Width="18" Height="18"/>
                    <TextBlock Text="Mods"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PathIcon Data="{StaticResource settings_regular}" Width="18" Height="18"/>
                    <TextBlock Text="Settings"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>

