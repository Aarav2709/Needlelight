<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
            xmlns:viewModels="clr-namespace:Needlelight.ViewModels"
            xmlns:ext="clr-namespace:Needlelight.Extensions"
            xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
            x:Class="Needlelight.Views.Pages.InfoView"
            x:CompileBindings="True"
            x:DataType="viewModels:InfoViewModel">
    <UserControl.Styles>
        <Style Selector="Button.game-tile">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Border.tile-image">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Setter>
        </Style>
        <Style Selector="Button.game-tile:pointerover Border.tile-image">
            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1.06" ScaleY="1.06" />
            </Setter>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,Auto,Auto" Margin="24">
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
            <Button Classes="game-tile" Background="#330055" Width="220" Height="260" Click="OnSelectHollowKnight">
                <StackPanel Spacing="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Classes="tile-image" Width="140" Height="140" Background="#3E0A66" CornerRadius="10">
                        <TextBlock Text="IMAGE" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#E5D8FF" />
                    </Border>
                    <TextBlock Text="Hollow Knight"
                               FontFamily="{DynamicResource GameFont}"
                               FontSize="18"
                               Foreground="#F2E9FF" />
                </StackPanel>
            </Button>

            <Button Classes="game-tile" Background="#E92337" Width="220" Height="260" Click="OnSelectSilksong">
                <StackPanel Spacing="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Classes="tile-image" Width="140" Height="140" Background="#7A101C" CornerRadius="10">
                        <TextBlock Text="IMAGE" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFE3E6" />
                    </Border>
                    <TextBlock Text="Silksong"
                               FontFamily="{DynamicResource GameFont}"
                               FontSize="18"
                               Foreground="#FFF0F2" />
                </StackPanel>
            </Button>
        </StackPanel>

        <Button Grid.Row="1"
                Classes="primary"
                HorizontalAlignment="Center"
                Margin="0,18,0,8"
                MinWidth="240"
                Height="44"
                IsEnabled="{Binding !IsLaunchingGame}"
                Command="{Binding LaunchGame}"
                CommandParameter="false">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <PathIcon Width="18" Height="18" Data="{StaticResource play_regular}" />
                <TextBlock Text="Launch Modded Game" FontSize="16" />
            </StackPanel>
        </Button>

        <StackPanel Grid.Row="2" Spacing="4" HorizontalAlignment="Center">
            <progRing:ProgressRing
                IsVisible="{Binding IsLaunchingGame}"
                Width="20"
                Height="20"
                IsActive="True"
                Foreground="Ivory"
                Margin="10,5" />
            <TextBlock
                IsVisible="{Binding IsLaunchingGame}"
                Text="{ext:Localize XAML_OpeningGame}"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>

